<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:BloodPressureTracker.Views"
       x:Class="BloodPressureTracker.AppShell"
       Title="BloodPressureTracker">

    <ShellContent Title="Главная" 
                  ContentTemplate="{DataTemplate views:MainPage}" 
                  Route="MainPage" 
                  Icon="home.png"/>

    <ShellContent Title="Добавить запись" 
                  ContentTemplate="{DataTemplate views:AddRecordPage}" 
                  Route="AddRecordPage" 
                  Icon="add.png"/>

    <ShellContent Title="Статистика" 
                  ContentTemplate="{DataTemplate views:StatisticsPage}" 
                  Route="StatisticsPage" 
                  Icon="chart.png"/>

    <ShellContent Title="История" 
                  ContentTemplate="{DataTemplate views:HistoryPage}" 
                  Route="HistoryPage" 
                  Icon="history.png"/>

    <ShellContent Title="Настройки" 
                  ContentTemplate="{DataTemplate views:SettingsPage}" 
                  Route="SettingsPage" 
                  Icon="settings.png"/>

</Shell>